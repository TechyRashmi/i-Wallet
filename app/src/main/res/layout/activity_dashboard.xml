<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:itemIconTint="@color/grey_700"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/side_menu"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"

                    android:src="@drawable/ic_shopping_bag"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llOrder"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView

                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/grey_900"
                    android:textStyle="bold"
                    android:text="Orders &amp; Bookings"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView

                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Recharge,Bill Payments &amp; Others"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"

                    android:src="@drawable/ic_price_tag"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView

                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/grey_900"
                    android:textStyle="bold"
                    android:text="Cashback &amp; Offers"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView

                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Cashback,Rewards &amp; Others"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"

                    android:src="@drawable/ic_avatar"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="My Profile"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Profile,Payments and Security"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"

                    android:src="@drawable/ic_referral"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Refer &amp; earn"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Share and Earn Cashback"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">
            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/ic_wallet"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llWalet"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="My i-Wallet"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Wallet balance and add money "
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">
            <LinearLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/ic_headphones"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="24 x 7 Customer Support"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="Customer Support &amp; Queries"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/grey_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
