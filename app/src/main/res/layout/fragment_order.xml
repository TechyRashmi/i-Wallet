<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.OrderFragment">


<androidx.cardview.widget.CardView
    android:layout_margin="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:outlineSpotShadowColor="@color/blue_900"
                android:src="@drawable/logo"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_circle_background_color="@color/blue_900" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView

                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey_900"
                android:textStyle="bold"
                android:text="Add money to wallet"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView

                android:textSize="@dimen/_10sdp"
                android:textColor="@color/grey_500"
                android:textStyle="bold"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="\u20b9 397"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/green_500"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="Successful"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="@dimen/_3sdp"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/grey_700"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="20 Feb 2021, 05:59 PM"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"

                android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


